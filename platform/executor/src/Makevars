ATOMICIO_DIR = $(PWD)/../../../third_party/atomicio
BOOST_DIR = $(PWD)/../../../third_party/install/include
BOOST_LIB_DIR = $(PWD)/../../../third_party/install/lib
BOOST_THREADPOOL_DIR = $(PWD)/../../../third_party/boost_threadpool/threadpool
GEN_DIR = $(PWD)/../../messaging/gen-cpp/
PRESTO_LIB_DIR = $(PWD)/../../../lib
PROTO_LIB_DIR = /usr/local/lib/
PRESTO_COMMON_DIR = $(PWD)/../../common
ZERO_MQ_DIR = /usr/local/include/

## Use the R_HOME indirection to support installations of multiple R version
R_INCLUDE_FLAGS = `$(R_HOME)/bin/R CMD config --cppflags`

PKG_LIBS = `$(R_HOME)/bin/Rscript -e "Rcpp:::LdFlags()"`
PKG_LIBS += `$(R_HOME)/bin/Rscript -e "RInside:::LdFlags()"`
PKG_LIBS += -lm -L ${PRESTO_LIB_DIR} -Wl,-rpath,${PRESTO_LIB_DIR} -Wl,-rpath,${PRESTO_LIB_DIR} -lR-common -L$(BOOST_LIB_DIR) -Wl,-rpath,${BOOST_LIB_DIR} -lboost_log -lboost_log_setup -lboost_thread -lboost_system -lboost_filesystem -lboost_date_time -L ${ATOMICIO_DIR} -Wl,-rpath,${ATOMICIO_DIR} -latomicio  -L ${PROTO_LIB_DIR} -Wl,-rpath,${PROTO_LIB_DIR}  -L$(PRESTO_LIB_DIR) -lR-proto -lrt

PKG_CPPFLAGS = -std=c++11 -I ${PRESTO_COMMON_DIR} -I ${BOOST_DIR} -I ${ZERO_MQ_DIR} -I ${GEN_DIR} -I ${BOOST_THREADPOOL_DIR} -I ${ATOMICIO_DIR} -I ${R_INCLUDE_FLAGS} -g -DSTRICT_R_HEADERS -DCSTACK_DEFNS
